<h1>Listing users</h1>

<table>
  <tr>
    <th>Twitter</th>
    <th>Name</th>
    <th>Screen name</th>
    <th>Location</th>
    <th>Timezone</th>
    <th>Description</th>
    <th>Url</th>
    <th>Profile image url</th>
    <th>Lang</th>
    <th>Friends count</th>
    <th>Statuses count</th>
    <th>Follwers count</th>
    <th>Lat</th>
    <th>Lng</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.twitter_id %></td>
    <td><%= user.name %></td>
    <td><%= user.screen_name %></td>
    <td><%= user.location %></td>
    <td><%= user.timezone %></td>
    <td><%= user.description %></td>
    <td><%= user.url %></td>
    <td><%= user.profile_image_url %></td>
    <td><%= user.lang %></td>
    <td><%= user.friends_count %></td>
    <td><%= user.statuses_count %></td>
    <td><%= user.follwers_count %></td>
    <td><%= user.lat %></td>
    <td><%= user.lng %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

